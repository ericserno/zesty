<head>
    <doctype>html5</doctype>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"/>
    <googlefont family="Carrois Gothic"/>
</head>


<clippings>
    <text name="site_name" name_friendly="Site Name">
        <![CDATA[Prohibition]]>
    </text>
    <images name="logo" name_friendly="Site Logo" limit="1">
        <![CDATA[https://bfc12c95bf592f49e9ca-011475fa8ac7cac22e21f0c5450cfe1f.ssl.cf2.rackcdn.com/sz-140x-prohibition-logo.png]]>
    </images>
    <text name="copyright" name_friendly="Copyright Text">
        <![CDATA[&#xA9; 2013 Zesty is a registered trademark of Variable Action.]]>
    </text>
    <text name="google_publisher_id" name_friendly="Google Publisher ID"/>
</clippings>

<ingredients>
    <templateset name="homepage" name_friendly="Homepage" view="homepage">
        <!-- there are 3 types of content set types, Templatesets (Single Page), Pagesets (Multi-page like artciles), and Datasets (tables or supplementatl data). The hompage is a single page, so it is a templateset. -->
        <fields>
            <text name="title" name_friendly="Lead in Title" required="1"/>
            <wysiwyg_advanced name="content" name_friendly="Intro Text"/>
            <images name="image" name_friendly="Main Image" limit="1"/>
        </fields>
        <!-- each content set needs to be preloaded with content, you can see that the xml tag names below match the field names above-->
        <items>
            <item link_title="Homepage" path_part="zesty_home">
                <!-- the path part zesty_home sets the homepage-->
                <title>
                    <![CDATA[Starting Foundation]]>
                </title>
                <!-- wrapping content in CDATA is neccesary -->
                <content>
                    <![CDATA[<p>Stop coding non-responsive sites. Let users view sites from anywhere.</p>]]>
                </content>
                <image>
                    <![CDATA[https://raw.githubusercontent.com/zesty-io/plate-starting-foundation/master/shield.png]]>
                </image>
            </item>
        </items>
    </templateset>
</ingredients>